        <Label Content="Total" HorizontalAlignment="Left" Height="30" Margin="236,85,0,0" VerticalAlignment="Top" Width="38"/>
        <Label Content="Total Geral:" HorizontalAlignment="Left" Height="27" Margin="147,180,0,0" VerticalAlignment="Top" Width="78" RenderTransformOrigin="0.474,-0.333"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="31" VerticalAlignment="Top" Width="290">
            <Label Content="Pedido" HorizontalAlignment="Left" Height="27" Margin="9,3,0,-1" VerticalAlignment="Top" Width="107"/>
