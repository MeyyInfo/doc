        <Label Content="Lista de itens:" HorizontalAlignment="Left" Height="28" Margin="27,50,0,0" VerticalAlignment="Top" Width="133"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="97" Margin="27,78,0,0" Stroke="Black" VerticalAlignment="Top" Width="245"/>
        <Label Content="Item" HorizontalAlignment="Left" Height="27" Margin="99,83,0,0" VerticalAlignment="Top" Width="39"/>
        <Label Content="Quant." HorizontalAlignment="Left" Height="27" Margin="147,83,0,0" VerticalAlignment="Top" Width="46" RenderTransformOrigin="-0.448,0.667"/>
